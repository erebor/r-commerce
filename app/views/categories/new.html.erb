<h1>New category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
	<% unless @category.parent_id.nil? %>
		<p>
		  <%= f.label :parent %>: <%= @category.parent_category.name %>
			<%= f.hidden_field :parent_id %>
		</p>
		<br />
	<% end %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
