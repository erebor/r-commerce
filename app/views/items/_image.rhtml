<div class="image">
		<p>
			Default: <input type="radio" id="default_radio" name="default_image" value="">
			<script type="text/javascript" charset="utf-8">
				$('default_radio').value = image_i;
				$('default_radio').id = 'default_radio_'+image_i+'';
			</script>
			<%= label_tag "Image" %>:
		  <%= file_field_tag 'item_images[]' %>
			<%= button_to_function "Remove Image", "this.up('.image').remove();" %>
		</p>
</div>