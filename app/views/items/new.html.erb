<h1>New item</h1>

<% form_for(@item, :url => items_path, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, Category.find(:all), :id, :name %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
	<p>
	  <%= label_tag 'Item Options' %><br />
	  <div id="item_options">
			<%= render :partial => 'item_option' %>
		</div>
		<%= button_to_function "Add an Item Option" do |page|
	  			page.insert_html :bottom, :item_options, :partial => 'item_option'
			end %>
	</p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
	<p>
	<%= f.label :images %><br />
	<div id="images">
		<script type="text/javascript" charset="utf-8">
			image_i = 0;
		</script>
		<%= render :partial => 'image' %>
	</div>
	<%= button_to_function "Add an Image" do |page|
  			page.insert_html :bottom, :images, :partial => 'image'
				page << "image_i++;"
		end %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>
